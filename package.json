{
  "name": "fiware-idm",
  "version": "7.9.2",
  "private": true,
  "license": "MIT",
  "scripts": {
    "start": "node ./bin/www",
    "healthcheck": "node ./bin/healthcheck.js",
    "debug": "sudo DEBUG=idm:*,oauth2-server:*  nodemon --ignore 'public/' --ignore 'views/' start",
    "create_db": "./node_modules/.bin/sequelize --env database db:create",
    "migrate_db": "./node_modules/.bin/sequelize --env database db:migrate",
    "seed_db": "./node_modules/.bin/sequelize --env database db:seed:all",
    "create_migration": "./node_modules/.bin/sequelize migration:generate --name",
    "undo_migration": "./node_modules/.bin/sequelize --env database db:migrate:undo",
    "undo_all_migration": "./node_modules/.bin/sequelize --env database db:migrate:undo:all",
    "clean": "rm -rf package-lock.json && rm -rf node_modules && rm -rf coverage",
    "lint": "eslint . --cache",
    "lint:text": "textlint '*.md' 'doc/*.md' 'doc/**/*.md' 'extras/docker/*.md'",
    "lint:md": "remark -f 'README.md' 'roadmap.md' 'doc' 'extras/docker'",
    "prettier": "prettier --config .prettierrc.json --write routes/**/*.js models/**/*.js controllers/**/*.js **/*.js *.js",
    "prettier:text": "prettier --parser markdown 'README.md' 'doc/**/*.md' 'extras/docker/*.md'  --tab-width 4 --print-width 80 --write --prose-wrap always",
    "test": "nyc --reporter=text mocha -- 'test/integration/*.js' 'test/integration/**/*.js' --reporter spec --timeout 3000 --ui bdd --exit",
    "test:coverage": "nyc --reporter=lcov mocha -- 'test/integration/*.js' 'test/integration/**/*.js' --timeout 3000 --ui bdd --exit",
    "test:coveralls": "npm run test:coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "test:single": "DEBUG=idm:*,oauth2-server:* mocha",
    "test:watch": "npm run test -- -w ./lib"
  },
  "dependencies": {
    "async": "^2.6.0",
    "base64-img": "^1.0.4",
    "bcrypt": "^5.0.0",
    "body-parser": "~1.18.2",
    "bootstrap-sass": "3.4.1",
    "browser-detect": "^0.2.28",
    "camelcase": "^5.3.1",
    "cookie-parser": "~1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "cors": "^2.8.5",
    "csurf": "^1.9.0",
    "debug": "~2.6.3",
    "device-detector-js": "^2.0.5",
    "ejs": "~2.5.7",
    "express": "^4.16.4",
    "express-force-ssl": "^0.3.2",
    "express-partials": "^0.3.0",
    "express-session": "^1.15.6",
    "express-useragent": "^1.0.13",
    "get-user-agent": "^4.0.0",
    "gravatar": "^1.6.0",
    "helmet": "^4.1.0",
    "http": "0.0.0",
    "https": "^1.0.0",
    "i18n-express": "^1.1.3",
    "is-hex": "^1.1.3",
    "jimp": "^0.6.0",
    "jsdom": "^16.4.0",
    "jsonwebtoken": "^8.3.0",
    "ldapjs": "^2.2.0",
    "lodash": "^4.17.19",
    "method-override": "^2.3.9",
    "mime-types": "^2.1.21",
    "morgan": "^1.9.1",
    "multer": "^1.3.0",
    "mysql2": "^1.4.2",
    "node-sass": "^4.13.1",
    "node-sass-middleware": "~0.11.0",
    "nodemailer": "~4.1.0",
    "nodemailer-mailgun-transport": "^1.4.0",
    "nodemailer-smtp-transport": "~2.7.4",
    "nodemon": "^2.0.6",
    "oauth2-server": "git+https://github.com/ging/node-oauth2-server#4.2",
    "otplib": "^11.0.1",
    "pg": "^7.5.0",
    "qrcode": "^1.4.4",
    "request": "^2.85.0",
    "sequelize": "^4.22.0",
    "sequelize-cli": "^4.0.0",
    "serve-favicon": "~2.4.2",
    "speakeasy": "^2.0.0",
    "underscore": "^1.8.3",
    "url": "^0.11.0",
    "xml-crypto": "^0.10.0",
    "xml-encryption": "^0.11.0",
    "xml2js": "^0.4.0",
    "xmlbuilder": "~2.2.0",
    "xmldom": "^0.1.0"
  },
  "devDependencies": {
    "chai": "4.2.0",
    "closure-linter-wrapper": "1.1.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.5.0",
    "eslint-config-tamia": "^7.2.5",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-snakecase": "0.0.1",
    "husky": "^4.2.5",
    "jshint": "~2.11.1",
    "lint-staged": "^10.2.11",
    "mocha": "^8.0.1",
    "mocha-lcov-reporter": "^1.3.0",
    "nock": "13.0.3",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "remark-cli": "^8.0.1",
    "remark-preset-lint-recommended": "^4.0.1",
    "should": "13.2.3",
    "sinon": "9.0.2",
    "sinon-chai": "3.5.0",
    "textlint": "^11.7.6",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-no-dead-link": "^4.7.0",
    "textlint-rule-terminology": "^2.1.4",
    "textlint-rule-write-good": "^1.6.2",
    "timekeeper": "2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --config .prettierrc.json --write",
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --parser markdown --tab-width 4 --print-width 80 --write --prose-wrap always",
      "textlint 'README.md' 'doc/*.md' 'doc/**/*.md'",
      "git add"
    ]
  },
  "remarkConfig": {
    "settings": {
      "bullet": "-",
      "paddedTable": true
    },
    "plugins": [
      "remark-preset-lint-recommended"
    ]
  }
}
