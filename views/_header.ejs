<header class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-navbar-collapse">
        <span class="fa fa-angle-double-down"></span>
      </button>
      <div class="logo-header">
        <a href="/" class="brand"></a><span class="brand-text"><%= site.title %></span>
      </div>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="header-navbar-collapse">
      <div id="user_info" class="col-md-pull-3 nav navbar-nav navbar-right">
        <div id="profile_editor_switcher" class="dropdown switcher_bar" tabindex="1">

          <%if(session.user){%>

            <a class="dropdown-toggle" data-toggle="dropdown" href="">
              <img alt="User" src="<%= session.user.image %>">
              <%= session.user.username %>
              <i class="fa fa-angle-double-down"></i>
            </a>
            <ul id="editor_list" class="dropdown-menu multi-level dropdown-menu-right" role="menu" aria-labelledby="dropdownMenu">
              <li>
                <a href="/idm/users/<%= session.user.id %>">
                  <i class="fa fa-user"></i> Profile
                </a>
              </li>
              <li>
                <a href="/idm/settings">
                  <i class="fa fa-cog"></i> Settings
                </a>
              </li>
              <li class="divider"></li>
              <li>
                <a href="/idm/help_about">
                  <i class="fa fa-question-circle"></i> Help &amp; About
                </a>
              </li>
              <li>
                <a href="/auth/logout?_method=DELETE" onclick="Fiware.signOut('account'); return false">
                  <i class="fa fa-sign-out"></i>Sign Out
                </a>
              </li>
            </ul>
          <%}%>
        </div>
      </div>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</header>
