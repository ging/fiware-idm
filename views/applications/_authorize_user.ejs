<!-- Form to authorize user and add role to the application -->
<!-- <div id="authorize_user" class="workflow modal in" style="top: 0px; display: none;" aria-hidden="false"> -->
<div id="authorize_user" class="modal fade" style="top: 0px;" role="dialog" aria-hidden="false">
    <form id="submit_authorized_users_form" class="" action="/idm/applications/<%= application.id %>/edit/users" method="POST">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button id="esc_auth_user" class="close" data-dismiss="modal">&times;</button>
                    <h3>Authorize users in your application</h3>
                </div>
                <div class="modal-body clearfix">
                    <div class="tab-content">
                      <fieldset id="manage_organization_users_application_roles__update_owners_users" class="js-tab-pane active">
                        <input id="submit_authorize" name="submit_authorize" type="hidden" value="">
                        <div class="membership update_owners_users_membership dropdown_fix add-members" data-show-roles="True">
                            <div class="all-users">
                                <header>
                                    <h4>All users</h4>
                                    <div class="form-group has-feedback">
                                        <input type="text" name="" id="available_update_owners_users" class="filter update_owners_users_server_filter form-control input-sm" placeholder="filter" data-url="/filters/users">
                                    </div>
                                    <div id="spinner_update_owners_users" class="filtering-spinner-inline" style="display: none;">
                                        <i class="fa fa-circle-o-notch fa-spin"></i>
                                    </div>
                                </header>
                                <div class="pre-scrollable filterable update_owners_users_server_filterable" id="available_update_owners_users">
                                    <ul id="available_members" class="available_members available_update_owners_users list-group">
                                    </ul>
                                    <ul class="no_results list-group alert alert-info" id="no_available_update_owners_users" style="display: none;">
                                        <li>No users found.</li>
                                    </ul>
                                    <ul class="no_results list-group alert alert-info" id="perform_filter_available_update_owners_users" style="display: block;">
                                        <li>Use the filter (type at least two characters).</li>
                                    </ul>
                                </div>
                                <span id="alert_error_search_available" style="display: none;" class='help-block alert alert-danger'>Invalid characters</span>
                            </div>
                            <div class="members-list">
                                <header>
                                    <h4>Authorized Users</h4>
                                    <div class="form-group has-feedback">
                                        <input type="text" name="" id="update_owners_users_members" class="filter update_owners_users_client_filter form-control input-sm" placeholder="filter">
                                    </div>
                                </header>
                                <div class="pre-scrollable filterable update_owners_users_client_filterable" id="update_owners_users_members" >

                                    <ul class="members update_owners_users_members list-group">
                                    </ul>

                                    <ul class="no_results list-group alert alert-info" id="no_update_owners_users_members" style="display: none;">
                                        <li>No users.</li>
                                    </ul>
                                </div>
                                <span id="alert_error_search_authorized" style="display: none;" class='help-block alert alert-danger'>Invalid characters</span>
                                
                                <div class="alert alert-warning no_roles_warning" style="display: none;">Some users don't have any role assigned. If you save now they won't be authorized in the application</div>
                            </div>
                        </div>
                    </fieldset>
                    <span id="info_added_user" style="display: none;" class='help-block alert alert-info'>User added</span>
                </div>
            </div>
            <div class="modal-footer">
                <input id="submit_button" class="btn btn-primary pull-right always-enabled" data-dismiss="modal" type="submit" value="Save">
                <button type="button" class="btn btn-default cancel" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</form>
</div>
