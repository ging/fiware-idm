    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">Ã—</a>
                <h3>Delete uploaded image</h3>
            </div>
            <form id="delete_avatar_form" ng-controller="DummyCtrl" name="" autocomplete="" class="" action="/idm/applications/<%= application.id %>/edit/delete_avatar/" method="POST" enctype="">
                <input type="hidden" name="" value="">
                <div class="modal-body clearfix">
                    <div class="left">
                        <fieldset>
                        </fieldset>
                    </div>
                    <div class="right">
